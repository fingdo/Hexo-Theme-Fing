.post_item {
  background white;
  padding 30px;
  margin-bottom 10px;
  border-radius: 4px;

  -moz-box-shadow: 0px 0px 4px #cecece;
  -webkit-box-shadow: 0px 0px 4px #cecece;
  box-shadow: 0px 0px 4px #cecece;
}

.post_item:hover {
  -moz-box-shadow: 0px 0px 10px #a5a5a5;
  -webkit-box-shadow: 0px 0px 10px #a5a5a5;
  box-shadow: 0px 0px 10px #a5a5a5;
}

@media (max-width: 767px) {
  .posts-expand {
    margin: 0 20px;

    +desktop-large() {
      margin: 0 20px;
    }
    +tablet() {
      margin: 0 20px;
    }
    +mobile() {
      margin: 0 5px;
    }

  }

  .post-body {
    pre, .highlight {
      .gutter pre {
        padding-left 10px;
        padding-right: 10px;
      }
    }
  }

}

.highlight{
  border 1px #eeeeee solid;
  border-radius $code-border-radius;
}

.post-body a {
  color $accentBlueColor;
  border none;
  border-bottom 1px solid $accentBlueColor;
}

.post-body a:hover {
  color $accentBlueLightColor;
  border none;
  border-bottom 1px solid $accentBlueLightColor;
  + mobile {
    color $accentBlueLightColor;
    border none;
    border-bottom 1px solid $accentBlueLightColor;
  }
  + table {
    color $accentBlueLightColor;
    border none;
    border-bottom 1px solid $accentBlueLightColor;
  }
}

.posts-expand .post-body {
  +desktop() {
    text-align: justify;
  }

  h2, h3, h4, h5, h6 {
    padding-top: 10px;

    .header-anchor {
      float: right;
      margin-left: 10px;
      color: $grey-light;
      border-bottom-style: none;
      visibility: hidden;

      &:hover {
        color: inherit;
      }
    }

    &:hover .header-anchor {
      visibility: visible;
    }
  }

  ul li { list-style: circle;
}

img {
  box-sizing: border-box;
  margin: auto;
  padding: 3px;
  border: 1px solid $gray-lighter;
}

}

.posts-expand .fancybox img {
  margin: 0 auto;
}
